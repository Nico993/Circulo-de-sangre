<%- include("header") %>
<link rel="stylesheet" href="css/nuevoReclamo.css">
</head>
<%- include("sideBar") %>


<form action="/nuevoReclamo" class="input" method="post" enctype="multipart/form-data">
    <div class="inputs row">
        <div class="col-lg-6 form-group">
            <span class="title-option">Eligue el incidente</span>
            <select class="form-control" name="incidente" id="motivoOptions">
              <% listaIncidentes.forEach((item,index) => { %>
                <option value=<%= index %>><%= item.nombre %> </option>
           <%   }); %> 
          </select>
        </div>
        <div class="col-lg-6 form-group">
            <span class="title-option">Categoria</span>
            <select class="form-control subCategoriaOptions" name="categoria">
              <% listaCategorias.forEach((item,index) => { %>
                <option class= <%= item.incidente.nombre %> value=<%= index %> ><%= item.nombre %> </option>
           <%   }); %> 
          </select>
        </div>
        <div class="col-lg-6 form-group">
            <span class="title-option">Calle</span>
            <select class="form-control" name="calle" id="ubicacionSelect">
              <% listaCalles.forEach((item,index) => { %>
                <option value=<%= item.codigo %> ><%= item.nombre %> </option>
           <%   }); %> 
          </select>
        </div>
        <div class="col-lg-6 form-group">
          <span class="title-option">Numero</span>
          <input type="number" name="numeroCalle" class="form-control" required>
      </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1" class="title-option">Comentario</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="comentario"></textarea>
          </div>
          <div class="col-lg-6 form-group">
            <label for="exampleFormControlFile1" class="title-option">Fotograf√≠a</label>
            <input type="file" accept=".jpg,.png,.jpeg" class="form-control-file btn btn-outline-light" id="exampleFormControlFile1" name="foto" required>
          </div>
    </div>
    <button class="registrar-button btn btn-primary btn-lg" type="submit" name="submit">Registrar Reclamo</button>
    
  

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    
    <!--Select2-->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script src="webjs/nuevoReclamo.js"></script>


  </form>
</body>
</html>